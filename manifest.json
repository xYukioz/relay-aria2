{
    "manifest_version": 3,
    "name": "relay",
    "version": "1.0",
    "description": "seamlessly send downloads to aria2.",
    "permissions": [
        "downloads",
        "storage",
        "cookies",
        "activeTab",
        "notifications",
        "contextMenus"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "icon.png",
        "default_title": "relay"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "icons": {
        "48": "icon.png",
        "128": "icon.png"
    }
}